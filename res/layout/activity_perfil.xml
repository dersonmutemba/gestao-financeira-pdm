<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:paddingStart="50dp"
                android:paddingEnd="50dp">

                <TextView
                    android:id="@+id/empty0"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txMudarNome"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/raleway"
                    android:paddingEnd="20dp"
                    android:paddingRight="20dp"
                    android:text="Mudar Nome"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editMudarNome"
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/raleway"
                    android:hint="Mude o seu Nome"
                    android:inputType="textPersonName"
                    android:paddingEnd="50dp"
                    android:paddingRight="20dp"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:paddingStart="50dp"
                android:paddingEnd="50dp">

                <TextView
                    android:id="@+id/empty2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txSenhaAntiga"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/raleway"
                    android:paddingEnd="50dp"
                    android:paddingRight="20dp"
                    android:text="Senha Antiga"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editSenhaAntiga"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/raleway"
                    android:hint="Insira a senha actual"
                    android:inputType="textPassword"
                    android:paddingEnd="50dp"
                    android:paddingRight="20dp"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:paddingStart="50dp"
                android:paddingEnd="50dp">

                <TextView
                    android:id="@+id/empty3"
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txSenhaNova"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/raleway"
                    android:paddingEnd="50dp"
                    android:paddingRight="20dp"
                    android:text="Nova Senha"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editSenhaNova"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/raleway"
                    android:hint="Insira a sua nova Senha"
                    android:inputType="textPassword"
                    android:paddingEnd="50dp"
                    android:paddingRight="20dp"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="93dp"
                android:orientation="vertical"
                android:paddingStart="30dp"
                android:paddingEnd="30dp">


                <Button
                    android:id="@+id/btLimparDados"
                    android:layout_width="match_parent"
                    android:layout_height="69dp"
                    android:layout_weight="1"
                    android:ellipsize="middle"
                    android:fontFamily="@font/raleway"
                    android:shadowColor="@android:color/black"
                    android:text="Guardar Dados"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    app:backgroundTint="@color/white" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>